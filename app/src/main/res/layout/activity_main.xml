<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="444dp"
        android:text="037-123456"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="444dp"
        android:text="service@gmail.com"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txtTel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtGJun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:text="巨匠電腦 新竹認證中心"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txtTel"
        app:layout_constraintTop_toBottomOf="@+id/txtTel" />
</androidx.constraintlayout.widget.ConstraintLayout>